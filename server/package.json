{
  "name": "recipedia-backend",
  "version": "0.0.0",
  "private": true,
  "nodemonConfig": {
    "exec": "yarn dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "scripts": {
    "start": "yarn dev",
    "server": "node ./.dist/bin/www",
    "build": "npm-run-all clean transpile",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel src --out-dir .dist",
    "clean": "rimraf .dist",
    "lint": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,scss,md}",
    "test": "jest --collectCoverage"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.3",
    "constant-case": "^3.0.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dgraph-js": "^2.1.0",
    "express": "~4.16.1",
    "grpc": "^1.24.9",
    "morgan": "~1.9.1",
    "prettier": "^1.19.1",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-flow": "^7.8.3",
    "babel-plugin-module-resolver": "^4.0.0",
    "flow-bin": "^0.119.1",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "test": "./test",
            "underscore": "lodash"
          }
        }
      ]
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-flow"
    ]
  }
}
